{
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true,
    "browser": true
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "no-obj-calls": 2,
    "use-isnan": 2,
    "no-dupe-args": 2,
    "no-delete-var": 2,
    "no-shadow-restricted-names": 2,
    "no-invalid-regexp": 2,
    "no-duplicate-case": 2,
    "no-redeclare": 2,
    "no-constant-condition": 2,
    "no-cond-assign": 2,
    "no-sparse-arrays": 2,
    "comma-spacing": 1,
    "eol-last": 1,
    "no-extra-semi": 2,
    "space-infix-ops": 1,
    "curly": 0,
    "camelcase": 0,
    "no-undefined": 2,
    "no-extra-boolean-cast": 2,
    "valid-jsdoc": 2,
    "no-unused-vars": 2,
    "eqeqeq": 1,
    "no-unexpected-multiline": 2,
    "no-negated-in-lhs": 2,
    "no-spaced-func": 1,
    "no-irregular-whitespace": 2,
    "no-use-before-define": 2,
    "no-debugger": 2,
    "no-unreachable": 2,
    "comma-dangle": 0,
    "no-dupe-keys": 2,
    "valid-typeof": 2,
    "no-label-var": 2,
    "no-console": 0,
    "no-undef": 2,
    "no-extra-parens": 0,
    "no-undef-init": 2,
    "semi": 0,
    "no-regex-spaces": 2,
    "no-empty-character-class": 2,
    "init-declarations": 2,
    "no-catch-shadow": 2,
    "no-ex-assign": 2,
    "no-control-regex": 2,
    "no-inner-declarations": 2,
    "key-spacing": 1,
    "no-func-assign": 2,
    "consistent-return": 0,
    "no-empty": 2,
    "no-alert": 1,
    "no-shadow": 2,
    "react/jsx-uses-vars": 1,
    "react/prop-types": [ 1, { "ignore": [ "children", ] } ],
	"react/no-unknown-property": [2, {"ignore": ["class", "for"]}]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
